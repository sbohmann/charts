doctype html
html
    head
        title="Charts"
        link(rel="stylesheet" href="style.css")
        script(type="module" src="main.js")
        meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    body
        div#settings
            label='Linear'
                input(type='radio' id='linear' name='projection' value='linear')
            label='Logarithmisch'
                input(type='radio' id='logarithmic' name='projection' value='logarithmic')

        div#chart
            div#canvasLayout
                canvas#canvas
